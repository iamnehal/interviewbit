method 1: see video of codebix on utube

int dp[451][451];
int solve(string a,string b)
{ 
    int n=a.length();
    int m=b.length();
    
    
    if(dp[n][m]!=-1)return dp[n][m];
    if(a=="")
    {
        dp[n][m]=m;
        return m;
        
        
    }
    if(b=="")
    {
        dp[n][m]=n;return n;
    }
    
    if(a[0]==b[0])
    {
        dp[n][m]=solve(a.substr(1,n),b.substr(1,m));
        return dp[n][m];
        
        
        
    }
    
    
    else
    {
        
        //insertion 
        int t1=solve(a,b.substr(1,m));
        //delete
        
        int t2=solve(a.substr(1,n),b);
        
        //replace
        
        int t3=solve(a.substr(1,n),b.substr(1,m));
        
        
        dp[n][m]=1+min(t1,min(t2,t3));
        return dp[n][m];
        
    }
    
    
    
    
    
}



int Solution::minDistance(string A, string B) {
    memset(dp,-1,sizeof(dp));
    int ans=0;
    ans=solve(A,B);
    return ans;
    
    
}

int solve(string a,string b)
{ 
    int n=a.size();
    int m=b.size();
    
    int dp[n+1][m+1];
    memset(dp,0,sizeof(dp));
    int i,j;
    i=0;j=0;
    for(i=0;i<=n;i++)dp[i][0]=i;
    for(j=0;j<=m;j++)dp[0][j]=j;
    i=1;
    
    j=1;
    int t1,t2,t3;
    for(i=1;i<=n;i++)
    {for(j=1;j<=m;j++)
    {
        
        if(a[i-1]==b[j-1])
        {
            dp[i][j]=dp[i-1][j-1];
            
        }
        else
        {
            //insertion
            t1=dp[i][j-1]+1;
            //deletion
            t2=dp[i-1][j]+1;
            //replacement
            t3=dp[i-1][j-1]+1;
            dp[i][j]=min(t1,min(t2,t3));//taking min
            
            
        }
        
        
        
    }
        
        
        
    }
    
    return dp[n][m];
}



int Solution::minDistance(string A, string B) {
   int ans;
    ans=solve(A,B);
    return ans;
    
    
}







